{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}}">
  <a href="{{url}}">
    <div class="post-thumb" style="background-image: url({{#if image}}{{image}}{{else}}'http://placehold.it/700x298'{{/if}})">
      {{!-- <img src="http://placehold.it/700x300" alt=""> --}}
    </div>
  </a>
  <header class="post-header">
    <h2 class="post-title"><a href="{{url}}">{{title}} <span>{{meta_description}}</span></a></h2>
  </header>
  <section class="post-excerpt">
    <p>{{excerpt words="26"}}&hellip; <a class="read-more" href="{{url}}">more</a></p>
  </section>
  <footer class="post-meta">
    {{!-- {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}} --}}
    <span class="post-meta-span">{{tags}} / <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MM.DD.YYYY"}}</time></span>
  </footer>
</article>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
