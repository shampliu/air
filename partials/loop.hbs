{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}}">
  <a href="{{url}}">
    <div class="post-thumb" style="background-image: url({{#if image}}{{image}}{{else}}'http://placehold.it/700x298'{{/if}})"></div>
  </a>
  <header class="post-header">
    <h2 class="post-title"><a href="{{url}}">{{#formatTitle title}}{{/formatTitle}}</a></h2>
  </header>
  <footer class="post-meta" style="margin-bottom: 0;">
    {{!-- {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}} --}}
    <span class="post-meta-span"><span class="post-meta-span-tags">#{{tags}}</span> / <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MM.DD.YYYY"}}</time></span>
  </footer>
</article>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
